{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420/"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "BlendFarm",
  "version": "0.1.0",
  "identifier": "com.blendfarm.dev",
  "plugins": {
    "cli": {
      "subcommands": {
        "client": {
          "args": []
        },
        "server": {
          "args": []
        }
      }
    },
    "dialog": {
      "all": true
    }
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Blender Farm",
        "width": 800,
        "height": 600
      }
    ],
    "withGlobalTauri": false,
    "security": {
      "capabilities": [
        "shell:allow-execute",
        "shell:allow-open"
      ],
      "assetProtocol": {
        "scope": [
          "*/**"
        ],
        "enable": true
      },
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; connect-src ipc: http://ipc.localhost"
    }
  }
}