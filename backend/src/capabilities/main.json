{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "window": [
        "main"
    ],
    "permission": [
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "name": "exec-sh",
                    "cmd": "sh",
                    "args": [
                        "-c",
                        {
                            "validator": "\\S+"
                        }
                    ],
                    "sidecar": false
                }
            ]
        },
        {
            "identifier": "allow-cli-matches",
            "allow": [
                {
                    "name": "cli-matches",
                    "cmd": "cli-matches",
                    "args": [
                        {
                            "validator": "\\S+"
                        }
                    ],
                    "sidecar": false
                }
            ]
        }
    ]
}